<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportConnect.styles.css" asp-append-version="true" />

    <style>
        html{
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .dropdown-item:hover{
            background-color: #2081F9 !important;
        }
    </style>
</head>
<body class="m-0">
    <header>
        <nav style="background-color: #09264A; height: 100px; padding: 0px 30px 0px 30px" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
            <div style="display: flex; justify-content: space-between; width: 100%;">
                <div style="display: flex; align-items: center;">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img style="height: 60px; margin-right: 10px" src="~/images/logo.png" />
                    </a>
                    <a style="color: white; padding: 8px 0px 8px 0px !important; margin: 0px !important" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SportConnect</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                
                <div style="display: flex; align-items: center">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            var controller = ViewContext.RouteData.Values["controller"] as string;
                            var action = ViewContext.RouteData.Values["action"] as string;
                        }

                        @if ((controller == "Grupos" && action == "Index" && !User.Identity.IsAuthenticated) || controller == "Home" || (controller == "Usuarios" && (action == "Login" || action == "Cadastrar" || action == "AlterarSenha" || action == "ConfirmarSenha" || action == "Sucesso")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link text-white">Sobre Nós</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link text-white">Contato</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Grupos" asp-action="Index">Ver Grupos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Cadastrar">Cadastre-se</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Login">Login</a>
                            </li>
                        }
                        
                        @if (User.Identity.IsAuthenticated && ((controller == "Usuarios" && (action == "Editar" || action == "Excluir")) || (controller != "Usuarios" && controller != "Home")))
                        {
                            <li class="nav-item" style="display: flex; align-items: center; margin-right: 20px">
                                <i style="color: white; font-size: 24px" class="fa-solid fa-bell"></i>
                                <a class="nav-link text-white" asp-area="">Notificações</a>
                            </li>
                            <li class="nav-item">
                                <div class="dropdown">
                                    <a style="text-decoration: none; display: flex; align-items: center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <img style="height: 50px;" src="~/images/usuario-foto.png" />
                                        <p style="margin: 0px" class="nav-link text-white">@User.Identity.Name</p>
                                    </a>

                                    <ul style="padding: 0px !important; min-width: 0px; width: 122px !important; background: #09264A; border: solid 1px white" class="dropdown-menu">
                                        <li style="border-bottom: solid 1px white"><a style="padding: 8px 0px 8px 0px" class="dropdown-item text-white text-center" href="#">Perfil</a></li>
                                        <li><a style="padding: 8px 0px 8px 0px" asp-area="" asp-controller="Usuarios" asp-action="Logout" class="text-center dropdown-item text-white">Sair</a></li>
                                    </ul>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="height: 100%">
        <main role="main" class="h-100">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/513aa25e9d.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
