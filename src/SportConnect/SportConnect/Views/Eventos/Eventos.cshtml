@model IEnumerable<SportConnect.Models.Evento>

@{
    ViewData["Title"] = "Eventos";
}
@section HeadStyles {
    <style>
        [id^="map-"] {
            height: 250px !important;
            width: 100%;
            border-radius: 8px;
        }
    </style>
}
<h1>Eventos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar Novo Evento</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@item.Nome</h5>
                    <p class="card-text">@item.Descricao</p>
                    <p class="card-text"><strong>Endereço:</strong> @item.Rua, @item.Numero - @item.Bairro</p>

                    <div id="map-@item.Id" style="height: 200px; border-radius: 8px; background-color: #f0f0f0;"></div>

                    <div class="mt-3">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            console.log("Inicializando mapas Leaflet...");


            @foreach (var item in Model)
            {
                if (item.Latitude.HasValue && item.Longitude.HasValue)
                {
                         Console.WriteLine(item);
                            var latStr = item.Latitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture);
                    var lngStr = item.Longitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture);

                string latitude = latStr.Insert(3, ".");
                        string longitude = lngStr.Insert(3, ".");
                <text>
                        try {
                            var lat_@item.Id = parseFloat("@latitude");
                            var lng_@item.Id = parseFloat("@longitude");
                            console.log("Evento '@item.Nome' - Lat:", lat_@item.Id, "Lng:", lng_@item.Id);

                            var map_@item.Id = L.map('map-@item.Id').setView([lat_@item.Id, lng_@item.Id], 15);

                            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                                attribution: '© OpenStreetMap contributors'
                            }).addTo(map_@item.Id);

                            L.marker([lat_@item.Id, lng_@item.Id])
                                .addTo(map_@item.Id)
                                .bindPopup("<b>@item.Nome</b><br>@item.Rua, @item.Numero - @item.Bairro");

                            setTimeout(function() {
                                
                            }, 400);

                        } catch (e) {
                            console.error("Erro ao renderizar mapa do evento '@item.Nome':", e);
                        }
                    </text>
                }
                else
                {
                    <text>
                        console.warn("Evento '@item.Nome' sem coordenadas válidas.");
                    </text>
                }
            }
        });
    </script>
}
