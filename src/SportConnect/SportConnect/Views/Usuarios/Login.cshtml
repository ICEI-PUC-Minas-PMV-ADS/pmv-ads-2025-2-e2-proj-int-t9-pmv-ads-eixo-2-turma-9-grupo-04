@model SportConnect.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex flex-column h-100 justify-content-center align-items-center" style="background-color: #cccccc; overflow: hidden">
    <div class="bg-white" style="border-radius: 20px; padding: 20px 40px 20px 40px; width: 500px; height: 500px">
        <div class="d-flex flex-column justify-content-center h-100">
            <h1 class="text-center" style="margin-bottom: 30px; margin-top: 20px; font-size: 35px">Login</h1>
            <div class="col-md-4 w-100">
                @if (ViewData["Message"] != null)
                {
                    <p class="text-danger">@ViewData["Message"]</p>
                }
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" style="border-radius: 10px"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin: 20px 0px 20px 0px">
                        <label asp-for="Senha" class="control-label"></label>
                        <input asp-for="Senha" class="form-control" style="border-radius: 10px"/>
                        <span asp-validation-for="Senha" class="text-danger"></span>
                        <div class="d-flex justify-content-end" style="margin-top: 6px">
                            <p style="cursor: pointer; color: #2081F9;">Esqueceu a senha?</p>
                        </div>
                    </div>
                    <div class="form-group text-center" style="margin-top: 25px">
                        <input type="submit" value="Login" class="btn btn-primary" style="border-radius: 10px; font-size: 18px; font-weight: 600; padding: 8px 50px 8px 50px"/>
                        
                        <div style="margin-top: 20px">
                            <p class="m-0 text-center">Não possui uma conta?</p>
                            <p class="m-0 text-center" style="color: #2081F9; cursor: pointer">Cadastra-se!</p>
                        </div>
                    </div>                 
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
