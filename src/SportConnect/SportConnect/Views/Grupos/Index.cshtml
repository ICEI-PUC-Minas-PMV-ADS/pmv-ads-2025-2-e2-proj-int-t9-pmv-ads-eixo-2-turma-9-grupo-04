@model IEnumerable<CriarGrupo.Models.Grupo>

@using System.Security.Claims
@{
   
    int uid;
    bool logged = int.TryParse(User.FindFirstValue(ClaimTypes.NameIdentifier), out uid);
}

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-criar">Criar novo grupo</a>
</p>

<h1>Grupos</h1>

<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <p><strong>Nome:</strong> @item.Nome</p>
                    <p class="mb-1"><strong>Descrição:</strong> @item.Descricao</p>
                    <p class="mb-1"><strong>Máximo de Participantes:</strong> @item.NumeroMaximoParticipantes</p>
                    <p class="mb-1">
                        <strong>Adicionar lista de espera?:</strong> @(item.ListaEspera ? "Sim" : "Não")
                    </p>
                    <p class="mb-1"><strong>Modalidade:</strong> @item.Modalidade</p>
                    <p class="mb-1"><strong>Estado:</strong> @item.Estado</p>
                    <p class="mb-0"><strong>Cidade:</strong> @item.Cidade</p>
                </div>

                <div class="card-footer bg-white border-0 d-flex justify-content-center gap-3">
                    @{
                        
                        var ehDono = logged && item.UsuarioId.HasValue && item.UsuarioId.Value == uid;
                    }

                    @if (ehDono)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-custom">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-custom">Visualizar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-custom">Excluir Grupo</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-custom">Visualizar</a>
                        <button type="button" class="btn btn-primary btn-custom btn-participar" data-id="@item.Id">Participar</button>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const botoes = document.querySelectorAll(".btn-participar");

            botoes.forEach(btn => {
                btn.addEventListener("click", () => {
                    
                    alert("Inscrição realizada!");

                    
                    btn.classList.remove("btn-primary");
                    btn.classList.add("btn-success");

                    
                    btn.textContent = "Participando";

                    
                    btn.disabled = true;
                });
            });
        });
    </script>
}

<style>
    .btn-custom {
        border-radius: 12px;
        width: 130px;
        padding: 4px 0;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #007bff !important;
        border-color: #007bff !important;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0069d9 !important;
            border-color: #0062cc !important;
        }

    .btn-success {
        background-color: #28a745 !important;
        border-color: #28a745 !important;
        color: #fff;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
        margin-left: 40px;
    }

        .card p {
            margin-bottom: 4px;
        }

    h1 {
        font-size: 28px;
        margin-bottom: 30px;
        margin-left: 40px;
    }

    p {
        margin-bottom: 20px;
    }

    .btn-criar {
        border-radius: 12px;
        border-color: #000;
        margin-top: 20px;
        margin-left: 40px;
    }
</style>
